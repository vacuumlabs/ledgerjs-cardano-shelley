{
  "name": "@cardano-foundation/ledgerjs-hw-app-cardano",
  "version": "3.0.0",
  "files": [
    "dist"
  ],
  "types": "./dist/Ada.d.ts",
  "description": "Ledger Hardware Wallet Cardano ADA API",
  "main": "dist/Ada.js",
  "repository": "github:cardano-foundation/ledgerjs-hw-app-cardano",
  "keywords": [
    "Ledger",
    "LedgerWallet",
    "ADA",
    "Cardano",
    "SL",
    "NanoS",
    "Hardware",
    "Wallet"
  ],
  "author": "VacuumLabs <adalite@vacuumlabs.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@ledgerhq/hw-transport": "^5.12.0",
    "@types/ledgerhq__hw-transport": "^4.21.3",
    "base-x": "^3.0.5",
    "bech32": "^1.1.4",
    "node-int64": "^0.4.0"
  },
  "devDependencies": {
    "@ledgerhq/hw-transport-node-hid": "^5.12.0",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/ledgerhq__hw-transport-node-hid": "^4.22.2",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.28",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chalk": "^4.0.0",
    "eslint": "^7.19.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "flowgen": "^1.14.0",
    "gh-pages": "^3.1.0",
    "mocha": "^7.1.1",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "ts-node": "^9.1.1",
    "typedoc": "git+https://github.com/ppershing/typedoc.git",
    "typescript": "^4.1.5"
  },
  "bugs": {
    "url": "https://github.com/cardano-foundation/ledgerjs-hw-app-cardano/issues"
  },
  "homepage": "https://github.com/cardano-foundation/ledgerjs-hw-app-cardano",
  "scripts": {
    "prepare": "cd node_modules/typedoc && yarn install && yarn build",
    "lint": "yarn eslint .",
    "clean": "rm -rf dist/",
    "build": "yarn tsc -p src/tsconfig.json && yarn build:flowtypes",
    "build:flowtypes": "find . -type f -not -path './node_modules/*' -name '*.d.ts' -exec sh -c 'yarn flowgen --add-flow-header --no-inexact $1 -o ${1%.*.*}.js.flow' _ '{}' \\;",
    "gen-docs": "yarn typedoc",
    "prepublish": "yarn run clean && yarn run build",
    "run-example": "yarn ts-node -P example-node/tsconfig.json example-node/index.ts",
    "device-self-test": "mocha --timeout 3600000 -r ts-node/register test/device-self-test/**/*.test.ts",
    "test-all": "yarn device-self-test && yarn test-integration",
    "test-integration": "yarn mocha --timeout 3600000 -r ts-node/register test/integration/**/*.test.ts",
    "//": "run single test by specifying --grep <name> parameter in test-integration"
  }
}
